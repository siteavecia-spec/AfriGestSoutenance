{
  "name": "afrigest",
  "version": "1.0.0",
  "description": "Application de gestion multi-boutiques AfriGest",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install",
    "start": "node server/index.js",
    "smoke": "node client/scripts/smoke-tests.js",
    "create-admin": "node server/scripts/create-super-admin.js",
    "test": "jest --testPathPattern=tests/",
    "test:watch": "jest --watch --testPathPattern=tests/",
    "test:coverage": "jest --coverage --testPathPattern=tests/",
    "test:api": "jest tests/api.test.js --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "test:load": "jest tests/load-tests.js --testNamePattern=Load",
    "test:unit": "jest tests/unit/ --runInBand --detectOpenHandles --forceExit",
    "test:e2e": "jest tests/e2e/",
    "test:security": "jest tests/security/",
    "test:performance": "jest tests/performance/",
    "test:roles": "node tests/run-role-tests.js",
    "test:super-admin": "jest tests/roles/superAdmin.test.js",
    "test:admin-pdg": "jest tests/roles/adminPDG.test.js",
    "test:dg": "jest tests/roles/directeurGeneral.test.js",
    "test:manager": "jest tests/roles/manager.test.js",
    "test:employee": "jest tests/roles/employee.test.js",
    "test:all": "npm run test:unit && npm run test:api && npm run test:integration && npm run test:roles",
    "test:ci": "npm run test:coverage && npm run test:load && npm run test:roles",
    "test:quick": "node test-quick.bat",
    "test:load-script": "node test-load.bat",
    "test:simple": "test-simple.bat",
    "test:basic": "jest tests/simple-role-test.js",
    "diag:db": "node scripts/test-db-connection.js"
  },
  "keywords": [
    "gestion",
    "multi-boutiques",
    "comptabilitÃ©",
    "stocks"
  ],
  "author": "AfriGest Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-object-rest-spread": "^7.28.4",
    "@babel/preset-env": "^7.23.0",
    "@types/jest": "^29.5.8",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "mongodb-memory-server": "^9.1.3",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/node_modules/**",
      "!server/index.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true
  }
}
